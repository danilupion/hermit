{
  "name": "@hermit/relay",
  "version": "0.0.1",
  "private": true,
  "description": "Hermit relay server",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch -p tsconfig.build.json",
    "build:check": "tsc --noEmit",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --max-warnings 0",
    "test": "vitest --run",
    "test:watch": "vitest",
    "check": "pnpm build:check && pnpm lint && pnpm test",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hermit/protocol": "workspace:*",
    "@hono/node-server": "1.19.9",
    "@hono/node-ws": "1.3.0",
    "@hono/zod-validator": "0.7.6",
    "argon2": "0.44.0",
    "drizzle-orm": "0.45.1",
    "hono": "4.11.7",
    "jose": "6.1.3",
    "pg": "8.18.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@slango.configs/eslint": "1.1.49",
    "@slango.configs/typescript": "1.0.7",
    "@slango.configs/vitest": "2.0.5",
    "@types/node": "25.1.0",
    "@types/pg": "8.16.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "4.0.18",
    "drizzle-kit": "0.31.8",
    "eslint": "9.39.2",
    "msw": "2.12.7",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
